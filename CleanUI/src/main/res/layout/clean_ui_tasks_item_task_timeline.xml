<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="46dp"
    android:layout_marginEnd="16dp"

    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/clean_ui_llTaskBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        tools:background="@drawable/ui_clean_tasks_task_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/clean_ui_tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    tools:text="Set the posts for the week"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/clean_ui_tvHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    tools:text="09:00 - 10:00"
                    android:textSize="12dp"
                    android:gravity="end"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                >

                <!--<IconTextView
                    android:id="@+id/it_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:text="1:30 Horas"
                    app:icon="@drawable/ic_timer"

                    android:layout_marginEnd="6dp"
                    />-->

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <devjdelasen.com.cleanui.tasks.TaskDurationBar
        android:id="@+id/clean_ui_durationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        />

</LinearLayout>